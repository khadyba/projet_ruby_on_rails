<h2> Publier une nouvelle blague </h2>

<%= form_with model: @blague, local: true do |form| %>
   
  <% if @blague.errors.any? %>
    <h2> Une erreur est survenue :</h2>
  <%end%>

  <p>
    <%= form.label :nom %>
    <%= form.text_field :nom %>
  </p>

  <p>
    <%= form.label :contenue %>
    <%= form.text_area :contenue %>
  </p>

  <p>
    <%= form.label :auteur %>
    <%= form.text_field :auteur %>
  </p>

  <p>
    <%= form.submit "Publier la blague" %>
  </p>

<% end %>

<h2> Toutes les Blagues</h2>
<br>
 <div> Publier une nouvelle blagues
      <%= link_to "Ajoutez Blague",   new_blague_path() %>
  </div>
<% if @blagues.present? %>
  <% @blagues.each do |blague| %>
    <div>Nom : 
      <%= blague.nom %>
    </div>
    <div>Contenue : 
      <%= blague.contenue %>
    </div>
    <div>Publié par : 
      <%= blague.auteur %>
    </div>

    <div>
    <%= link_to "Voir la blague", blague_path(blague) %>
    </div>

    <div>
      <%= link_to "Modifier la blague", edit_blague_path(blague) %>
    </div>

    <div>
      <%= form_with model: blague, method: :delete, local: true do |form| %>
    <%= form.submit "Supprimer la blague", data: { confirm: "Es-tu sûr de vouloir supprimer cette blague ?" } %>
  <% end %>
    </div>

  
    <hr>
  <% end %>
<% else %>
  <p>Aucune blague trouvée.</p>
<% end %>

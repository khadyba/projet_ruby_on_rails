<h2>Modifier la blague </h2>


<%= form_with model: @blague, local: true, data: { turbo: false } do |form| %>
   

   <%
=begin%>
  pour afficher les message d'erreur si l'envoi ecoue
<%
=end%>
  <% if @blague.errors.any? %>
    <h2> Une erreur est survenue :</h2>
    <ul>
      <% @blague.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= form.label :nom %>
    <%= form.text_field :nom %>
  </p>

  <p>
    <%= form.label :contenue %>
    <%= form.text_area :contenue %>
  </p>

  <p>
    <%= form.label :auteur %>
    <%= form.text_field :auteur %>
  </p>

  <p>
    <%= form.submit "Publier la blague" %>
  </p>

<% end %>